<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo blanco -->
            <corners android:radius="12dp" /> <!-- Bordes redondeados -->
            <padding android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp" />
        </shape>
    </item>
    <item android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Sombra gris -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
